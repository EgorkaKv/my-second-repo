<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopGreenButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="PackagesTopButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:height">113dp</item>
        <item name="android:width">362dp</item>
        <item name="android:background">@drawable/shape_top_of_package</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="PackagesBottomButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:height">69dp</item>
        <item name="android:width">362dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:text">Label</item>
        <item name="android:gravity">start|top</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="NavigateBarButtons" parent="Widget.AppCompat.Button">

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>